import tweepy
import random
import schedule
import time
from transformers import pipeline

# Twitter API credentials from GitHub Secrets
import os
API_KEY = os.getenv("API_KEY")
API_SECRET = os.getenv("API_SECRET")
ACCESS_TOKEN = os.getenv("ACCESS_TOKEN")
ACCESS_SECRET = os.getenv("ACCESS_SECRET")

# Authenticate with Twitter
auth = tweepy.OAuthHandler(API_KEY, API_SECRET)
auth.set_access_token(ACCESS_TOKEN, ACCESS_SECRET)
api = tweepy.API(auth, wait_on_rate_limit=True)

# AI Model for tweet generation
generator = pipeline("text-generation", model="gpt2")

def generate_tweet():
    """Generate an AI-powered tweet."""
    prompt = random.choice([
        "Today's thought: ",
        "Motivational wisdom: ",
        "AI says: ",
        "A quote for you: "
    ])
    tweet = generator(prompt, max_length=50, num_return_sequences=1)[0]["generated_text"]
    return tweet.strip()[:280]  # Ensure within Twitterâ€™s character limit

def post_tweet():
    """Post a tweet to Twitter."""
    tweet = generate_tweet()
    api.update_status(tweet)
    print(f"Tweet posted: {tweet}")

# Run once for testing
post_tweet()
